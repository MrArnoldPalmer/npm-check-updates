{
  "include": ["src", "test"],
  "exclude": ["test/deep", "test/doctor"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["es2019"],
    "module": "node16",
    "moduleResolution": "node16",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "paths": {
      "cint": ["./src/types/cint"],
      "libnpmconfig": ["./src/types/libnpmconfig.d.ts"],
      "spawn-please": ["./src/types/spawn-please.d.ts"]
    },
    "resolveJsonModule": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  }
}
